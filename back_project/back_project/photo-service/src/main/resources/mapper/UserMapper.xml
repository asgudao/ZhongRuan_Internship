<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjetc.dao.UserMapper">
    <sql id="columnName">
        id,
        username,
        avatar_path,
        email,
        telephone,
        qq,
        wechat,
        create_time,
        update_time
    </sql>
    <select id="selectByUsername" resultMap="baseMap">
        select
        <include refid="columnName"></include>
        from photolover_user
        where username = #{username}
    </select>
    <resultMap id="baseMap" type="user">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="avatar_path" property="avatarPath"></result>
        <result column="email" property="email"></result>
        <result column="telephone" property="telephone"></result>
        <result column="qq" property="qq"></result>
        <result column="wechat" property="wechat"></result>
        <result column="create_time" property="createTime"></result>
        <result column="update_time" property="updateTime"></result>
    </resultMap>
    <select id="selectByUserName" resultMap="baseMap">
        select
        <include refid="columnName"></include>
        from photolover_user
        where username = #{username}
    </select>

    <select id="selectByUsernameAndPassword" resultMap="baseMap">
        select
        <include refid="columnName"></include>
        from photolover_user
        where username=#{username}
        and password=#{password}
    </select>


    <select id="selectLikeUsername" resultMap="baseMap">
        select
        <include refid="columnName"></include>
        from photolover_user
        <if test="username!=null and username!=''">
            where username like concat('%',#{username},'%')
        </if>
        order by id desc
    </select>
</mapper>